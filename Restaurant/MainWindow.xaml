<Window x:Class="Restaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="Modern Restaurant" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Restaurant Menu" 
                     Foreground="{StaticResource PrimaryTextBrush}"
                     FontSize="24" 
                     FontWeight="SemiBold"
                     Margin="20,0,0,0"
                     VerticalAlignment="Center"/>

            <Grid Grid.Column="1" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Style="{StaticResource ModernTextBox}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         PlaceholderText="Search dishes..."
                         Margin="0,0,10,0"/>
                
                <Button Grid.Column="1" 
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SearchCommand}"
                        Content="Search"/>
            </Grid>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        Margin="20,0">
                <Button Style="{StaticResource ModernButton}"
                        Content="Login"
                        Margin="0,0,10,0"/>
                <Button Style="{StaticResource ModernButton}"
                        Content="Register"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories -->
            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="10"
                    Padding="10">
                <DockPanel>
                    <TextBlock Text="Categories"
                             DockPanel.Dock="Top"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Margin="0,0,0,10"/>
                    
                    <ListBox ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}"
                            Style="{StaticResource ModernListBox}"
                            ItemContainerStyle="{StaticResource ModernListBoxItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                         Foreground="{StaticResource PrimaryTextBrush}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Dishes -->
            <Border Grid.Column="1"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="10"
                    Margin="20,0,0,0"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Menu"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             FontSize="24"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <ItemsControl Grid.Row="1" 
                                ItemsSource="{Binding Dishes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="280"
                                        Height="320"
                                        Margin="0,0,20,20"
                                        Background="{StaticResource PrimaryBackgroundBrush}"
                                        CornerRadius="10"
                                        Padding="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="160"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Background="{StaticResource BorderBrush}"
                                                CornerRadius="8">
                                            <Image Source="{Binding Images[0].ImagePath}"
                                                   Stretch="UniformToFill"/>
                                        </Border>

                                        <TextBlock Grid.Row="1"
                                                 Text="{Binding Name}"
                                                 Foreground="{StaticResource PrimaryTextBrush}"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"
                                                 Margin="0,10,0,5"/>

                                        <TextBlock Grid.Row="2"
                                                 Text="{Binding Description}"
                                                 Foreground="{StaticResource SecondaryTextBrush}"
                                                 TextWrapping="Wrap"
                                                 MaxHeight="40"/>

                                        <Grid Grid.Row="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel VerticalAlignment="Bottom">
                                                <TextBlock Text="{Binding PortionSize, StringFormat='{}{0}g'}"
                                                         Foreground="{StaticResource SecondaryTextBrush}"/>
                                                <TextBlock Text="{Binding Price, StringFormat='${0:N2}'}"
                                                         Foreground="{StaticResource AccentBrush}"
                                                         FontSize="18"
                                                         FontWeight="Bold"/>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Style="{StaticResource ModernButton}"
                                                    Content="Add to Cart"
                                                    VerticalAlignment="Bottom"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Loading Overlay -->
                    <Grid Grid.Row="1" 
                          Background="#80000000"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True"
                                   Width="100"
                                   Height="100"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 