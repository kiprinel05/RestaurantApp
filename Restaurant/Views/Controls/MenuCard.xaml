<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="Restaurant.Views.Controls.MenuCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    
    <Border Background="White" 
            CornerRadius="8" 
            BorderBrush="#EEEEEE" 
            BorderThickness="1"
            Margin="8">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- titlu si pret -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Name}"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <TextBlock Grid.Column="1"
                          Text="{Binding Price, StringFormat={}{0:C}}"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="#2ECC71"/>
            </Grid>

            <!-- descriere -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Description}"
                       TextWrapping="Wrap"
                       Margin="0,8"
                       Foreground="#666666"/>

            <!-- lista de produse -->
            <StackPanel Grid.Row="2">
                <TextBlock Text="ConÈ›ine:"
                          FontWeight="SemiBold"
                          Margin="0,0,0,4"/>

                <ItemsControl ItemsSource="{Binding MenuItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                      Margin="0,2">
                                <TextBlock Text="{Binding ProductName}"
                                         Foreground="#666666"/>
                                <TextBlock Text="{Binding QuantityDisplay}"
                                         Margin="8,0,0,0"
                                         Foreground="#999999"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- disponibilitate -->
                <Border Background="{Binding IsAvailable, Converter={StaticResource BoolToColorConverter}}"
                        CornerRadius="4"
                        Padding="6,2"
                        HorizontalAlignment="Left"
                        Margin="0,8,0,0">
                    <TextBlock Text="{Binding IsAvailable, Converter={StaticResource AvailabilityConverter}}"
                             FontSize="10"
                             Foreground="White"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 