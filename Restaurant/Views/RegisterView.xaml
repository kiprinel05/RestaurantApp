<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Restaurant.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Restaurant.ViewModels"
        mc:Ignorable="d"
        Title="Register" Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AuthStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackgroundBrush}"
            BorderBrush="{StaticResource SecondaryBackgroundBrush}"
            BorderThickness="1"
            CornerRadius="10">
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Create Account"
                         Style="{StaticResource HeaderText}"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Fill in your details to get started"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"/>
            </StackPanel>

            <!-- Registration Form -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,10">
                <StackPanel>
                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                             Tag="First Name"
                             Margin="0,0,0,15"/>

                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Last Name"
                             Margin="0,0,0,15"/>

                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Email"
                             Margin="0,0,0,15"/>

                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Phone Number"
                             Margin="0,0,0,15"/>

                    <TextBox Style="{StaticResource ModernTextBox}"
                             Text="{Binding DeliveryAddress, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Delivery Address"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,0,0,15"/>

                    <PasswordBox x:Name="PasswordBox"
                               Style="{StaticResource ModernPasswordBox}"
                               Margin="0,0,0,15"/>

                    <PasswordBox x:Name="ConfirmPasswordBox"
                               Style="{StaticResource ModernPasswordBox}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                             Style="{StaticResource ErrorText}"
                             Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                             Margin="0,0,0,15"/>

                    <Button Content="Create Account"
                            Style="{StaticResource ModernButton}"
                            Command="{Binding RegisterCommand}"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <TextBlock Text="Already have an account? "
                         Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Sign In"
                         Foreground="{StaticResource AccentBrush}"
                         Cursor="Hand"
                         MouseDown="Login_MouseDown"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Content="âœ•"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-20,-20,0"
                    Style="{StaticResource ModernButton}"
                    Click="CloseButton_Click"
                    Width="30"
                    Height="30"
                    Padding="0"/>
        </Grid>
    </Border>
</Window> 