<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Restaurant.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Restaurant.ViewModels"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AuthStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackgroundBrush}"
            BorderBrush="{StaticResource SecondaryBackgroundBrush}"
            BorderThickness="1"
            CornerRadius="10">
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Welcome Back"
                         Style="{StaticResource HeaderText}"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Sign in to continue"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,30"/>
            </StackPanel>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Spacing="15">
                <TextBox Style="{StaticResource ModernTextBox}"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Email"/>

                <PasswordBox x:Name="PasswordBox"
                           Style="{StaticResource ModernPasswordBox}"/>

                <TextBlock Text="{Binding ErrorMessage}"
                         Style="{StaticResource ErrorText}"
                         Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="Sign In"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding LoginCommand}"
                        Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <TextBlock Text="Don't have an account? "
                         Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Register"
                         Foreground="{StaticResource AccentBrush}"
                         Cursor="Hand"
                         MouseDown="Register_MouseDown"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Content="âœ•"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-20,-20,0"
                    Style="{StaticResource ModernButton}"
                    Click="CloseButton_Click"
                    Width="30"
                    Height="30"
                    Padding="0"/>
        </Grid>
    </Border>
</Window> 