<UserControl x:Class="Restaurant.Views.Cart.CartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant.Views.Cart"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <local:TupleParameterConverter x:Key="TupleParameterConverter" />
        <Style x:Key="TotalPriceStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,20,10"/>
        </Style>
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFE57373"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Shopping Cart"
                 Style="{StaticResource PageTitleStyle}"
                 Margin="20"/>

        <!-- Cart Items -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CartItems}"
                        Margin="40,10,40,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Item Image -->
                            <Border Grid.Column="0"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8"
                                    Height="100">
                                <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                                       Stretch="UniformToFill"/>
                            </Border>

                            <!-- Item Info -->
                            <StackPanel Grid.Column="1"
                                      Margin="20,0"
                                      VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}"
                                         Style="{StaticResource ProductNameStyle}"/>
                                <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}"
                                         Style="{StaticResource ProductPriceStyle}"
                                         Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Quantity Controls -->
                            <StackPanel Grid.Column="2"
                                      Orientation="Horizontal"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0">
                                <Button Content="-"
                                        Width="32" Height="32"
                                        Background="#FFE57373"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="18"
                                        BorderThickness="0"
                                        Margin="0,0,5,0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{Binding DataContext.UpdateQuantityCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id, ConverterParameter=-1, Converter={x:Static local:TupleParameterConverter.Instance}}"
                                        Style="{x:Null}"/>
                                <Border Background="#222" CornerRadius="8" Padding="12,4" Margin="0,0,5,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Quantity}"
                                             Foreground="White"
                                             FontWeight="Bold"
                                             FontSize="16"
                                             TextAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <Button Content="+"
                                        Width="32" Height="32"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="18"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{Binding DataContext.UpdateQuantityCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding Id, ConverterParameter=1, Converter={x:Static local:TupleParameterConverter.Instance}}"
                                        Style="{x:Null}"/>
                            </StackPanel>

                            <!-- Remove Button -->
                            <Button Grid.Column="3"
                                    Content="Remove"
                                    Style="{StaticResource RemoveButtonStyle}"
                                    Command="{Binding DataContext.RemoveItemCommand, 
                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding Id}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer with Total -->
        <Grid Grid.Row="2"
              Background="#222"
              Margin="0,0,0,0"
              Height="60">
            <TextBlock Text="{Binding Total, StringFormat='Total: {0:C}'}"
                     Foreground="#FFF"
                     FontWeight="Bold"
                     FontSize="22"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"
                     Margin="0,0,40,0"/>
        </Grid>
    </Grid>
</UserControl> 